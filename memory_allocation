int main(){

    int n, *v;
    int i;
    fprintf(stdout,"introduce an integer n:\n");
    scanf("%d", &n);
    v = (int *) malloc (n * sizeof (int));
    if(v==NULL){
        fprintf(stderr,"memory allocation failed");
        exit(1);
    }
    fprintf(stdout,"insert array:\n");
    for(i=0;i<n;i++){
        scanf("%d", v+i);
    }
    printf("Array:\t");
    for(i=0;i<n;i++){
        fprintf(stdout,"%d\t", *(v+i));
    }
    
    free(v);
    return 0;
    
}
