#include <stdio.h>
#include <stdlib.h>

#define NR 5
#define NC 11
#define M 11

// Function prototypes
int findPath(char field[][M],int nr,int nc);

// Main function
int main (void) {
    int path;
    char matrix[NR][NC] = {
            "--*-*-****-",
            "**-*-***--*",
            "******-****",
            "--*-*-*-*-*",
            "**-*-***-*-",
    };
    path = findPath(matrix,NR,NC);
    fprintf(stdout,"Path found at index: %d", path);

    return (EXIT_SUCCESS);
}
int findPath(char field[][M],int nr,int nc){
    int i, j;
    int r, rStep;
    int start;
    int found = 0;

    for(i=0;i<nr && !found; i++){
        if(field[i][0] == '-'){
            start = i;
            rStep = i;
            found = 1;
            for(j=1; j<nc && found ;j++){
                found = 0;
                for(r = rStep-1 ; r <= rStep+1 && !found; r++){
                    if(field[r][j] == '-'){
                        found = 1;
                        r = rStep;
                    }
                }
            }
        }
    }
    if(!found){
        return -1;
    }else{
        return (start);
    }
}
