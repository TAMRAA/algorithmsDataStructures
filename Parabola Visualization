#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include <math.h>
#define N 1000

// PARABOLA VISUALIZATION

//Function prototypes
int main(void){
    FILE *fp = fopen("../output.txt","w");

    float a, b, c, step;
    int i,j, n;
    float x ,y;
    float x0, xn, ymin, ymax;

    if(fp==NULL){
        fprintf(stdout,"error opening file");
        return (EXIT_FAILURE);
    }
    fprintf(stdout,"insert coefficient a, b, c:\n");
    scanf("%f %f %f", &a, &b , &c);

    fprintf(stdout,"num ber of intervals:\n");
    scanf("%d", &n);

    fprintf(stdout,"interval for x-axis\n");
    scanf("%f %f", &x0, &xn);

    fprintf(stdout,"interval for y-axis\n");
    scanf("%f %f", &ymin, &ymax);

    step = (xn-x0)/ (float)n;

    for(i=0;i<=n; i++){
        x = x0 +(float)i*step;
        y = a*x*x + b*x + c;
        if(y>=ymin && y<= ymax){
            for(j=round(y-ymax) ;j>0;j--){
                fprintf(fp," ");
            }
            fprintf(fp,"*");
        }
        fprintf(fp,"\n");
    }
    fclose(fp);
    return (EXIT_SUCCESS);
}
