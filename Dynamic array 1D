#include "stdio.h"
#include "stdlib.h"

int main(void){
    int n , *v;
    int i;
    fprintf(stdout,"introduce an integer n:\n");
    scanf("%d", &n);
    v = (int *) malloc(n * sizeof (int));
    if(v==NULL){
        fprintf(stdout,"Memory allocation failed!!");
        exit(1);
    }
    for(i=0;i < n; i++){
        fprintf(stdout,"v[%d]:", i);
        scanf("%d", (v+i));
    }
    for(i=0;i < n; i++){
        fprintf(stdout,"v[%d]: %d\n",i, *(v+i));

    }
    free(v);
}
