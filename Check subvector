#include <stdio.h>
#include <stdlib.h>
#define N 10

void subsequence (int *v, int n);

int main(void){

    int array[N] = {1,3,7,1,0,1,9,3,1,0};

    // function call
    subsequence(array,N);

    return (EXIT_SUCCESS);
}

void subsequence (int *v, int n){
    int l, j, k, h;
    int found, toPrint;

    found = 0;
    for(l=n; !found && l>0 ;l--){
        for(j=0;j<=n-l;j++){
            toPrint = 1;
            for(k=j; toPrint && k<j+l; k++){
                if(v[k]%2 == 0){
                    toPrint = 0;
                }
            }
            if(toPrint){
                found = 1;
                fprintf(stdout,"Maximum subsequence: ");
                for(k=j;k<j+l;k++){
                    fprintf(stdout,"%d", v[k]);
                }
                fprintf(stdout,"\n");
                j = k;
            }
        }
    }

}
