#include <stdio.h>
#include <string.h>
#define N 20
// find position of 45 using linear search and binary search
int linear_search(int *str, int n , int k);
int binary_search(int *arr , int n, int k);
int main(){
    int vector[N] = {0,6,  8, 15, 16, 20, 20, 24, 25, 28, 30, 34, 36, 40, 41, 45, 50 };
    int l = strlen(vector), key;
    printf("insert value to search:\n");
    scanf("%d", &key);
    printf("found at index %d", binary_search(vector, l, key));
    return 0;
}
int linear_search(int *str, int n , int k){
    int i = 0, found = 0;
    while (i<n && !found){
        if(str[i] == k ){
            found = 1;
        }else{
            i++;
        }
    }
    if(found){
        return i+1;
    }else{
        return -1; // search failed
    }
}
int binary_search(int *arr , int n, int k){
    int m , l = 0 , r = n-1, found = 0;
    while (l<=r && !found){
        m = (l+r) / 2;
        if(arr[m] == k){
            found = 1;
        }else if(arr[m] > k ){
            r = m -1;
        }else{
            l = m+1;
        }
    }
    if(!found){
        return -1;
    }else{
        return m;
    }
}
