#include "stdio.h"
#include "string.h"
#define N 10
void reverse_string(char *s);
// > <
int main(){
    char string1[N] = {'t','a','m','r','a'};
    int i;
    // function call
    reverse_string(string1);
    for(i=0;i< strlen(string1); i++){
        printf("%c", string1[i]);
    }
    return 0;
}
void reverse_string(char *s){
    int i , j;
    char tmp;
    i = 0;
    j = strlen(s)-1;
    while(i<j){
        if (s[i]!=s[j]){
            tmp = s[i];
            s[i] = s[j];
            s[j] = tmp;
        }
        i++;
        j--;
    }
}
