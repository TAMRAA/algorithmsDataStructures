#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define NR 20
#define NC 20


// Function prototypes
void championship(int mat[NR][NC], int nr, int nc);
int searchMax(int points[NR], int n);
// Main function

int main(void) {
    int matrix[NR][NC];
    char filename[NR];
    int i, j, n ,m ;
    FILE *fp;
    fprintf(stdout,"insert name of file:\n");
    scanf("%s", filename);
    fp = fopen(filename,"r");
    if(fp == NULL){
        fprintf(stderr,"Error opening file");
        exit(EXIT_FAILURE);
    }

    fscanf(fp,"%d %d", &n, &m);

    // Store data in matrix
    for(i=0;i<n;i++){
        for(j=0; j< m;j++){
            fscanf(fp,"%d", &matrix[i][j]);
        }
    }

    championship(matrix,n,m);
    return (EXIT_SUCCESS);
}

void championship(int mat[NR][NC], int nr, int nc){
    int i, j;
    int count[nr];


    for(i=0;i<nr;i++){
        count[i] = 0;
    }

    for(i=0;i<nc;i++) {
        for (j = 0; j < nr; j++) {
            count[j] += mat[j][i];
        }
        fprintf(stdout,"the leading team is : %d\n", searchMax(count,nr));
    }

    
}

int searchMax(int points[NR], int n) {
    int max = -1, i, maxi = -1;
    for(i=0;i<n;i++) {
        if (max < points[i]) {
            max = points[i];
            maxi = i;
        }
    }
    fprintf(stdout,"max (%d) ", max);
    return maxi+1;
}
