#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define N 1000

//Function prototypes
void arrayCreate2 (int **ptr, int n);
int main(void){
    int i, *v = NULL;
    int n;
    fprintf(stdout,"insert size of dynamic array:\n");
    scanf("%d", &n);

    arrayCreate2(&v, n);
    for(i=0;i<n;i++){
        v[i] = i;
    }
    for(i=0;i<n;i++){
        fprintf(stdout,"%d ", v[i]);
    }

    return (EXIT_SUCCESS);
}
// function that returns a pointer
void arrayCreate1 (int **ptr, int n){
    *ptr = (int *) malloc(n * sizeof (n));
    if(*ptr == NULL){
        fprintf(stdout,"memory allocation failed");
        exit(1);
    }
    return ;
}

void arrayCreate2 (int **ptr, int n){
    // local pointer 
    int *lptr;
    lptr = malloc(n * sizeof (int));
    if(lptr == NULL){
        fprintf(stdout,"memory allocatikon failed");
        exit(1);
    }
    *ptr = lptr;
}
