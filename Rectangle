#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#define N 1000
//Function prototypes
void rectangle (int b, int h);
int main(void){
    int base, height;
    fprintf(stdout,"insert b:\n");
    scanf("%d", &base);
    fprintf(stdout,"insert h:\n");
    scanf("%d", &height);
    rectangle(base,height);

    return (EXIT_SUCCESS);
}

void rectangle (int b, int h){
    int i, j;
    for(i=0;i<h;i++){
        for(j=0;j<b;j++){
            if(i!=0 && i!= h-1 && j!=0 && j!= b-1){
                fprintf(stdout," ");
            }else{
                fprintf(stdout,"*");
            }
        }
        fprintf(stdout,"\n");
    }
    return;
}
